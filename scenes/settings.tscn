resource_name = "settings"
script/source = "extends CanvasLayer

@onready var menu = $Menu
@onready var gameManager = $\"..\"
@onready var soundsButton = $Menu/VBoxContainer/SoundHBox/Toggle
@onready var bgMusicButton = $Menu/VBoxContainer/BGMusicHBox/Toggle

@onready var backButton = $Menu/BackButton

signal goToPreviousPopup
signal toggleBgMusic

# TODO Round all of the corners everywhere
# TODO Make toggle button look the same for each setting
# TODO Align labels in left, buttons on right

func _ready():
	gameManager.openSettingsMenu.connect(open_settings_menu)
	# Set button text
	soundsButton.text = \"on\" if Game.sounds_on else \"off\"
	bgMusicButton.text = \"on\" if Game.bg_music_on else \"off\"

# TODO add button icons (?)
	
func open_settings_menu():
	menu.visible = true
	backButton.grab_focus()


func _on_back_button_pressed():
	menu.visible = false
	emit_signal(\"goToPreviousPopup\")


func _on_sounds_toggle_toggled(toggled_on):
	Game.toggle_sounds()
	if toggled_on:
		soundsButton.text = \"on\"
	else:
		soundsButton.text = \"off\"


func _on_bg_music_toggle_toggled(toggled_on):
	Game.toggle_bg_music()
	emit_signal(\"toggleBgMusic\")
	if toggled_on:
		bgMusicButton.text = \"on\"
	else:
		bgMusicButton.text = \"off\"
"

